<?xml version="1.0" encoding="utf-8"?>
<odoo>
	    <!-- PAPER FORMATS -->
        <record id="due_list_a4_landscape" model="report.paperformat">
            <field name="name">Due List A4 Landscape</field>
            <field name="orientation">Landscape</field>
            <field name="format">A4</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

		<report
			string="Due List report"
			id="action_report_duelist"
			model="account.move.line"
			report_type="qweb-pdf"
			name="account_due_list_report.report_duelist_qweb"
			file="account_due_list_report.report_duelist_qweb"/>

        <record id="action_report_duelist" model="ir.actions.report.xml">
            <field name="paperformat_id"
                   ref="account_due_list_report.due_list_a4_landscape"/>
        </record>

        <report
			string="Due List report group by Partner"
			id="action_report_duelist_partner"
			model="account.move.line"
			report_type="qweb-pdf"
			name="account_due_list_report.report_duelist_group_by_partner_qweb"
			file="account_due_list_report.report_duelist_group_by_partner_qweb"/>

        <record id="action_report_duelist_partner" model="ir.actions.report.xml">
            <field name="paperformat_id"
                   ref="account_due_list_report.due_list_a4_landscape"/>
        </record>
</odoo>

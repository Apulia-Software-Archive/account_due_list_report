<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_duelist_qweb">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <center><H1>SCADENZARIO</H1></center>
                            <table class="table">
                                <thead>
                                    <div class="text-center">
                                    <tr>
                                        <th>Sez.le</th>
                                        <th>Partner</th>
                                        <th>Data Fattura</th>
                                        <th>Fattura</th>
                                        <th>Data Scadenza</th>
                                        <th>Pagamento</th>
                                        <th>Dare</th>
                                        <th>Avere</th>
                                        <th>Residuo</th>
                                    </tr>
                                    </div>
                                </thead>
                                <t t-set="tot_importo" t-value="0.0"/>
                                <t t-set="tot_dare" t-value="0.0"/>
                                <t t-set="tot_avere" t-value="0.0"/>
                                <t t-set="parziale_importo" t-value="0.0"/>
                                <t t-set="parziale_dare" t-value="0.0"/>
                                <t t-set="parziale_avere" t-value="0.0"/>
                                <t t-set="flag" t-value="1"/>
                                <t t-foreach="docs" t-as="line">
                                    <t t-if="line">
                                        <t t-if="flag != 1">
                                            <t t-if="data_scadenza != (line.date_maturity or line.date)">
                                                <tr>
                                                    <td colspan="12"> </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="9"><p style="text-align:right;"><b>TOTALE SCADENZA</b></p></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="6"> </td>
                                                    <td><p style="text-align:right;"><b><t t-esc="parziale_dare"/></b></p></td>
                                                    <td><p style="text-align:right;"><b><t t-esc="parziale_avere"/></b></p></td>
                                                    <td><p style="text-align:right;"><b><t t-esc="parziale_importo"/></b></p></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="12"> </td>
                                                </tr>
                                                <t t-set="parziale_importo" t-value="0.0"/>
                                                <t t-set="parziale_dare" t-value="0.0"/>
                                                <t t-set="parziale_avere" t-value="0.0"/>
                                            </t>
                                        </t>
                                        <tbody>
                                            <tr>
                                                <td><t t-esc="line.invoice.journal_id and line.invoice.journal_id.code or ''"/></td>
                                                <td><t t-esc="line.partner_id.name or ''"/></td>
                                                <td><t t-esc="line.invoice.date_invoice or ''"/></td>
                                                <td><t t-esc="line.invoice.supplier_invoice_number or line.invoice.number or line.name or ''"/></td>
                                                <td><t t-esc="line.date_maturity or line.date"/></td>
                                                <td><t t-esc="line.invoice.payment_term and line.invoice.payment_term.name or ''"/></td>
                                                <td class="text-right"><span t-field="line.debit"/></td>
                                                <td class="text-right"><span t-field="line.credit"/></td>
                                                <td class="text-right"><span t-field="line.maturity_residual"/></td>
                                            </tr>
                                            <t t-set="parziale_importo" t-value="parziale_importo+line.maturity_residual"/>
                                            <t t-set="parziale_dare" t-value="parziale_dare+line.debit"/>
                                            <t t-set="parziale_avere" t-value="parziale_avere+line.credit"/>
                                            <t t-set="data_scadenza" t-value="(line.date_maturity or line.date)"/>
                                            <t t-set="flag" t-value="flag + 1"/>
                                        </tbody>
                                    </t>
                                </t>
                                <tr>
                                    <td colspan="12"> </td>
                                </tr>
                                <tr>
                                    <td colspan="9"><p style="text-align:right;"><b>TOTALE SCADENZA</b></p></td>
                                </tr>
                                <tr>
                                    <td colspan="6"> </td>
                                    <td><p style="text-align:right;"><b><t t-esc="parziale_dare"/></b></p></td>
                                    <td><p style="text-align:right;"><b><t t-esc="parziale_avere"/></b></p></td>
                                    <td><p style="text-align:right;"><b><t t-esc="parziale_importo"/></b></p></td>
                                </tr>
                                <tr>
                                    <td colspan="12"> </td>
                                </tr>

                                <t t-set="tot_dare" t-value="sum([t.debit for t in docs])"/>
                                <t t-set="tot_avere" t-value="sum([t.credit for t in docs])"/>
                                <t t-set="tot_residual" t-value="sum([t.maturity_residual for t in docs])"/>
                                <tr>
                                    <td colspan="9"><h4><p style="text-align:right;"><b>TOTALE COMPLESSIVO: </b></p></h4></td>
                                </tr>
                                <tr>
                                    <td colspan="6"> </td>
                                    <td><h4><p style="text-align:right;"><b><span t-esc="tot_dare"/></b></p></h4></td>
                                    <td><h4><p style="text-align:right;"><b><span t-esc="tot_avere"/></b></p></h4></td>
                                    <td><h4><p style="text-align:right;"><b><span t-esc="tot_residual"/></b></p></h4></td>
                                </tr>
                            </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>

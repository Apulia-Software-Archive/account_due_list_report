<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_account_journal_form_hide" model="ir.ui.view">
        <field name="name">account.journal.form.hide</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="show_on_dashboard" position="after">
                <field name="hide_in_due_view"/>
            </field>
        </field>
    </record>

    <!-- ====================================================== -->
    <!-- 				ACCOUNT.MOVE.LINE FILTER				-->
    <!-- ====================================================== -->
    <record id="view_payments_filter_type_extended" model="ir.ui.view">
        <field name="name">Payments Select Exdended</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account_due_list.view_payments_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/filter[4]" position="replace">
                <filter name="unreconciled_filter" icon="terp-dolar_ok!" string="Unreconciled" domain="[('reconciled','=',False)]" help="Unreconciled payments"/>
                <filter name="reconciled_filter" icon="terp-dolar" string="Reconciled" domain="[('reconciled','!=',False)]" help="Reconciled payments"/>
            </xpath>
        </field>
    </record>

    <!-- ====================================================== -->
    <!-- 				ACCOUNT.MOVE.LINE ACTION				-->
    <!-- ====================================================== -->
    <record model="ir.actions.act_window" id="account_due_list.action_invoice_payments">
        <field name="name">Payments</field>
        <field name="res_model">account.move.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="account_due_list.view_payments_tree"/>
        <field name="search_view_id" ref="account_due_list.view_payments_filter"/>
        <field name="domain">[('account_id.internal_type', 'in', ['receivable', 'payable']), ('hide_in_due_view','=',False)]</field>
        <field name="context">{'search_default_from_invoices': 1}</field>
    </record>

</odoo>
